<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:id="@+id/loginn">

        <SearchView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/searchView"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="87dp"
            android:layout_marginEnd="87dp" />

        <EditText
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:id="@+id/editText3"
            android:layout_alignBottom="@+id/searchView" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText4"
            android:layout_above="@+id/editText3"
            android:layout_alignRight="@+id/editText3"
            android:layout_alignEnd="@+id/editText3"
            android:layout_marginBottom="51dp"
            android:text="Store Name" />

        <FrameLayout
            android:layout_width="200dp"
            android:layout_height="250dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_above="@+id/editText4"
            android:id="@+id/frameLayout">

            <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:text="Welcome"
                android:id="@+id/textView"
                android:layout_gravity="top|left|center_horizontal"
                android:layout_marginLeft="0dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:text="Kemo"
                android:id="@+id/textView2"
                android:layout_gravity="left|center"
                android:layout_marginLeft="0dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Campus Cash Balance"
                android:id="@+id/textView3"
                android:layout_gravity="left|bottom|center_horizontal"
                android:layout_marginBottom="10dp" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/frameLayout"
            android:layout_alignStart="@+id/frameLayout">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Logout"
                android:id="@+id/button"
                android:layout_gravity="center_horizontal|top" />
        </FrameLayout>
    </RelativeLayout>
</LinearLayout>
